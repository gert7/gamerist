<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id="room_game">
    <%= f.label "game_tf2" do %>
      <%= f.radio_button(:game, "team fortress 2", checked: 'checked')%>
      <p>Team Fortress 2</p>
    <% end %>
  </div>
  <div id="room_gameoptions" class="room_optionsbox">
    <div class="options_header">Game options</div>
    <div class="field_optionsbox" id="room_map">
      <h4>Map</h4>
      <%= f.select(:map, options_for_select(["", "cp_dustbowl", "ctf_2fort"])) %>
    </div>
  </div>
  <div id="room_roomoptions" class="room_optionsbox">
    <div class="options_header">Room options</div>
    <div class="field_bigradio" id="room_playercount">
      <h4>Playercount</h4>
      <%= f.label(:playercount_4, "4", class: 'bigradiobutton') do %>
      <%= f.radio_button(:playercount, "4", checked: 'checked') %>
        4
      <% end %><%= f.label(:playercount_8, "8", class: 'bigradiobutton') do %>
      <%= f.radio_button(:playercount, "8") %>
        8
      <% end %><%= f.label(:playercount_16, "16", class: 'bigradiobutton') do %>
      <%= f.radio_button(:playercount, "16") %>
        16
      <% end %><%= f.label(:playercount_32, "32", class: 'bigradiobutton') do %>
      <%= f.radio_button(:playercount, "32") %>
        32
      <% end %>
    </div>
    <div class="field_wagerselect", id="room_wager">
      <h4>Wager</h4>
      <input type="number" name="room[wager]" min="5" max="50" value="5" class="wagerselector"></input>
    </div>
  </div>
  <div class="actions">
    <input type="hidden" name="server"></input>
    <%= f.submit %>
  </div>
<% end %>
