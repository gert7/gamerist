<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id="room_game">
    <%= f.label "game_tf2" do %>
      <%= f.radio_button(:game, "team fortress 2", checked: 'checked')%>
      <p>Team Fortress 2</p>
    <% end %>
  </div>
  <div id="room_gameoptions" class="room_optionsbox">
    <div class="options_header saturatedBackground2">Game options</div>
    <div class="field_optionsbox" id="room_map">
      <h4 class="saturatedBackground2">Map</h4>
      <%= f.select(:map, options_for_select([""].concat @map_options)) %>
    </div>
  </div>
  <div id="room_roomoptions" class="room_optionsbox">
    <div class="options_header saturatedBackground2">Room options</div>
    <div class="field_bigradio" id="room_playercount">
      <h4 class="saturatedBackground2">Playercount</h4> <!-- #TODO switch this back -->
      <%= f.label(:playercount_1, "1", class: 'bigradiobutton saturatedBackgroundDim') do %>
      <%= f.radio_button(:playercount, 1) %>
        1
      <% end %><%= f.label(:playercount_8, "8", class: 'bigradiobutton saturatedBackgroundDim') do %>
      <%= f.radio_button(:playercount, 8) %>
        8
      <% end %><%= f.label(:playercount_24, "24", class: 'bigradiobutton saturatedBackgroundDim') do %>
      <%= f.radio_button(:playercount, 24) %>
        16
      <% end %><%= f.label(:playercount_32, "32", class: 'bigradiobutton saturatedBackgroundDim') do %>
      <%= f.radio_button(:playercount, 32) %>
        32
      <% end %>
    </div>
    <div class="field_wagerselect" id="room_wager">
      <h4 class="saturatedBackground2">Wager</h4>
      <input type="number" name="room[wager]" min="<%= Room::WAGER_MIN %>" max="<%= Room::WAGER_MAX %>" value="5" class="wagerselector"></input>
    </div>
    <div id="room_continent">
      Region: <span id="room_continent_name"></span>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
