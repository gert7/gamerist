fetchPlayer = (data, id) ->
  return null if !data
  finder = (v) ->
    v.id == id
  ply = $.grep(data.rules.players, finder, false)[0]
  return ply

fetchCurrentPlayer = (data) ->
  return fetchPlayer(data, data.reqid)

