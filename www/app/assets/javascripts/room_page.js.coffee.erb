chatLine = (steamname, message) ->
  name = $("<div/>").text(steamname).html()
  msg  = $("<div/>").text(message.message).html()
  return '<div class="srules_chatbox_steamname">' + name + '</div>: <div class="srules_chatbox_messagecontent">' + msg.autoLink() + "</div>"

