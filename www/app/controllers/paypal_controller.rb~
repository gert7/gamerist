class PaypalController < ApplicationController

  # Accept a new PayPal query
  def create
    Paypal::start_paypal_add(current_user, params[:points], :SWE, request.host)
  end

  # User redirect
  def show
    pp = Paypal.find_by_id params[:id]
    pp.finalize_paypal_add(params[:PayerID])
  end
end
