<div id="frosted_glass">
	<div id="frosted_glass_left">
		<div id="win_games">
			Win games for money
		</div>
		<div id="win_games_mini">
			Compete in multiplayer games against other players and teams for cash.
		</div>
		</div>
	<div id="frosted_glass_right">
		<div id="fg_slideshow">
			<div id="fg_slideshow_image"></div>
			<div id="fg_slideshow_text_outer">
				<div id="fg_slideshow_text_inner">
					<div id="fg_slideshow_text_inner_content1" class="fg_slide_title">Team Fortress 2</div>
					<div id="fg_slideshow_text_inner_content2" class="fg_slide_title">Counter-Strike: Source</div>
				</div>
				<div id="fg_slideshow_icon"></div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript" src="/html/js/jquery.animate-shadow-min.js"></script>
<script type="text/javascript">

$(document).ready(function () {

	$("#fg_slideshow_icon").animate({
		'background-position': '-52px'
	}, 1000);
	$("#fg_slideshow_image").animate({
		'background-position': '-355px'
	}, 1000);
	$("#fg_slideshow_text_inner").animate({
		'boxShadow': '-4px 4px #b8a759'
	}, 1000);
	$("#fg_slideshow_text_inner_content1").fadeOut();
	$("#fg_slideshow_text_inner_content2").fadeIn();
}	
)
</script>